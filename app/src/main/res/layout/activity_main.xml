<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrad"
    tools:context="com.latynin.testproject.MainActivity">

    <ImageView
        android:id="@+id/anim_gas"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="196dp"
        android:layout_marginEnd="164dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anim_gas"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="196dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="RTrucking"
        android:textColor="#e6e6e6"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/anim_gas"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cr"
        android:layout_width="150dp"
        android:layout_height="32dp"
        android:textSize="12dp"
        android:background="#00000000"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Сделать заказ"
        android:textColor="#e6e6e6"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg" />

    <Button
        android:id="@+id/reg"
        android:layout_width="150dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Регистрация"
        android:textColor="#e6e6e6"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Entry" />

    <Button
        android:id="@+id/Entry"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Войти"
        android:textColor="#3d3d3d"
        android:textStyle="bold"
        android:background="@drawable/btngrad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mPasswordField" />

    <EditText
        android:id="@+id/mEmailField"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="15"
        android:inputType="textPersonName"
        android:hint="Email"
        android:theme="@style/Blank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anim_gas" />

    <EditText
        android:id="@+id/mPasswordField"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="15"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:theme="@style/Blank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEmailField" />



</android.support.constraint.ConstraintLayout>
